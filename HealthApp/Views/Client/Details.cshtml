@model healthApp.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>This is @Html.DisplayFor(model => model.ClientFirstName)</h2>
@{
<div>
    <style type="text/css" media="print">
        a {
            visibility: hidden;
        }
    </style>
	
    <table class="table table-striped">
        <thead style="padding:100px">

        <th colspan="4">
            <b>@Html.DisplayFor(model => model.ClientFirstName) @Html.DisplayFor(model => model.ClientLastName)</b>
        </th>
        </thead>
        <tr>

            <td rowspan="3" style="width: 10%; margin-spacing:0 25">
                <img src="@Url.Content("~/Client/ViewImage/" + @Html.DisplayFor(model => model.ClientID))" style="height: 98px; width: 103px" />
            </td>
        </tr>
        <tr>
            <td>
                <b>@Html.DisplayNameFor(model => model.ClientGender)</b>
            </td>

            <td>
                @Html.DisplayFor(model => model.ClientGender)
            </td>
            <td>
                <b>@Html.ActionLink("Edit", "Edit", new { id = Model.ClientID })</b>
            </td>
        </tr>
        <tr>
            <td>
                <b>@Html.DisplayNameFor(model => model.ClientDOB)</b>
            </td>
            <td>
                @Html.DisplayFor(model => model.ClientDOB)
            </td>
            <td>
                <b>@Html.ActionLink("Details", "Details", new { id = Model.ClientID })</b>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <b>@Html.DisplayNameFor(model => model.ClientHealthNum)</b>
            </td>
            <td colspan="1">
                @Html.DisplayFor(model => model.ClientHealthNum)
            </td>

            <td>
                <b>@Html.ActionLink("Add Services", "../Services/AddServices", new { id = Model.ClientID, roomNo = Model.ClientBedNum })</b>

            </td>
        </tr>
        <tr>
            <td colspan="2">
                <b>@Html.DisplayNameFor(model => model.ClientMarital)</b>
            </td>
            <td colspan="1">
                @Html.DisplayFor(model => model.ClientMarital)
            </td>

            <td>
                <b>@Html.ActionLink("View Subscribed Services", "GetServices", new { id = Model.ClientID })</b>

            </td>
        </tr>
        <tr>
            <td colspan="2">
                <b>@Html.DisplayNameFor(model => model.ClientBedNum)</b>
            </td>
            <td colspan="1">
                @Html.DisplayFor(model => model.ClientBedNum)
            </td>
            <td>
                <b>@Html.ActionLink("Delete", "Delete", new { id = Model.ClientID })</b>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <b>@Html.DisplayNameFor(model => model.ClientFamilyDoc)</b>
            </td>
            <td colspan="1">
                @Html.DisplayFor(model => model.ClientFamilyDoc)
            </td>
            <td>
                <b>@Html.ActionLink("Upload Photo", "UploadPicture", new { id = Model.ClientID })</b>
            </td>
        </tr>
    </table>
    <br />
    <br />
    
</div>
    
<p id="detailsLinks">
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClientID }) |
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Print", "", new{ id =""}, new { id="printButton", onclick = "printPage()" })
</p>
<script>
    function printPage()
    {
        window.print();
        document.getElementById("printButton").style.display = 'none';
        document.getElementById("detailsLinks").style.display = 'none';
    }
</script> 
}